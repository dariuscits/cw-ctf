void displayText(const char* text) {
  static bool toggle = true;
  byte font_h = display.getMaxCharHeight();
  display.clearBuffer();

  if (toggle) {
    byte y = (font_h * 2) + ((display.getDisplayHeight() - (font_h * 2)) / 2);
    display.setFontPosCenter();
    showCenteredString(y, (char *)text);
  }

  toggle = !toggle;
  display.sendBuffer();
  delay(500);
}
byte showCenteredString(byte y, char *str) {
  byte x = (display.getDisplayWidth() - display.getStrWidth(str)) / 2;
  display.drawStr(x, y, str);
}


 

